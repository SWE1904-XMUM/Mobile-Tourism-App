<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/hotelCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="5dp"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp">

            <ImageView
                android:id="@+id/hotelImageList"
                android:layout_width="75dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/hotelNameList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Hotel 1"
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/hotelRatingList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Rating"
                    android:textColor="@color/gold"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/callBtnList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/call_icon"
                android:layout_marginVertical="30dp"
                android:layout_marginRight="10dp"
                android:tint="@color/red"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/addBtnList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_bookmark_icon"
                android:layout_marginVertical="30dp"
                android:tint="@color/green"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>